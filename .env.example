# ============================================================================
# FOOD INTELLIGENCE PLATFORM - CONFIGURATION TEMPLATE
# Copy this to .env and add your API keys
# ============================================================================

# ----------------------------------------------------------------------------
# LLM API KEYS - PRIMARY INTELLIGENCE LAYER
# ----------------------------------------------------------------------------
# DeepSeek: Primary LLM (Recommended - Best cost/performance ratio)
# Cost: $0.14/1M input tokens, $0.55/1M output tokens
# Get key from: https://platform.deepseek.com
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# xAI Grok: Secondary LLM for cross-validation
# Cost: $5/1M input tokens, $15/1M output tokens  
# Get key from: https://console.x.ai
XAI_API_KEY=your_xai_grok_api_key_here

# OpenAI: Tertiary fallback (optional)
# Cost: Varies by model (gpt-4o-mini recommended)
# Get key from: https://platform.openai.com
# OPENAI_API_KEY=your_openai_api_key_here

# ----------------------------------------------------------------------------
# TYPESENSE SEARCH ENGINE
# ----------------------------------------------------------------------------
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_API_KEY=xyz

# ----------------------------------------------------------------------------
# API SERVER CONFIGURATION
# ----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ----------------------------------------------------------------------------
# LOGGING
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=console

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------
ENABLE_LLM_PARSING=true
ENABLE_LLM_COMPARISON=true
ENABLE_MULTILINGUAL=true
ENABLE_SEMANTIC_SEARCH=true
